{% extends 'BidheeAdminBundle::layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="col-md-12">
                    {{ form_row(form.adTitle) }}
                </div>

                <div class="col-md-12">
                    <div class="featuredImageHolder img-responsive">

                    </div>
                    {{ form_row(form.file) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.adLink) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.script) }}
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-12">
                    {{ form_row(form.startDate) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.expiryDate) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.placement) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.orderBy) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.publish) }}
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="col-md-12">
        <input type="submit" class="btn btn-primary btn-lg" value="SAVE">
        <a href="{{ url('bidhee_admin_ad_list') }}" class="btn btn-lg btn-danger">CANCEL</a>
    </div>

    <div class="clearfix"></div>

    {{ form_end(form) }}
{% endblock %}

{% block scripts %}
    <link rel="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
{% endblock scripts %}

