{% extends 'BidheeAdminBundle::layout.html.twig' %}

{% block content %}

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Category</h4>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                {{ form_label(form.parent) }}
                                {{ form_widget(form.parent) }}
                                {{ form_errors(form.parent) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.alias) }}
                                {{ form_widget(form.alias) }}
                                {{ form_errors(form.alias) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.ordering) }}
                                {{ form_widget(form.ordering) }}
                                {{ form_errors(form.ordering) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="panel panel-default form-horizontal">
                        <div class="panel-body">
                            <div class="form-group">
                                {{ form_label(form.publish) }}
                                {{ form_widget(form.publish) }}
                                {{ form_errors(form.publish) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.isTopMenuItem) }}
                                {{ form_widget(form.isTopMenuItem) }}
                                {{ form_errors(form.isTopMenuItem) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.trash) }}
                                {{ form_widget(form.trash) }}
                                {{ form_errors(form.trash) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary btn-lg" value="SAVE">
                    <a href="{{ url('bidhee_admin_news_list') }}" class="btn btn-lg btn-danger">CANCEL</a>
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>

    <div class="clearfix"></div>
{% endblock %}
