{% extends '@BidheeFrontend/layout.html.twig' %}
{% block title %}
    <title>Janata Samachar News - {{ content.title }} </title>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="inner-section cover-news">
            <div class="row">
                <div class="col-sm-12">
                    <div class="related-news">
                        <h2 class="heading"><span>{{ content.title }}</span></h2>
                        <div class="row">
                            {{ content.description|raw }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
