<section>
    <div class="container">
        <div class="col-6">
            <div class="mod_interview">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':11}) }}"
                             title="">अन्तर्वार्ता</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':11}) }}" class="more">थप अन्तर्वार्ता</a>
                </div>
                {% if interviewNews %}
                    {% for news in interviewNews|slice(0,1) %}
                        <div class="top">
                            {% if news.featuredImage %}
                                <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                           title="{{ news.title }}"><img
                                                src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_270_180') }}"
                                                height="180" width="270"
                                                alt="{{ news.title }}"></a>
                                </figure>
                            {% endif %}
                            <div class="tbl">
                                <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                       title="{{ news.title }}">{{ news.title }}</a>
                                </h5>
                                <div class="intro"><div class="overflow">
                                        {% if news.authorcheck == true %}{% if news.authorName is not null%}<span class="author">{{news.authorName}}{% endif %}{% endif %}</span>{{ news.introText|striptags|slice(0, 80)~'...' }}
                                    </div>
                                </div>
                                {#<p>{{ news.introText|striptags|slice(0, 80)~'...' }}</p>#}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                <div class="bottom">
                    {% if interviewNews %}
                        {% for news in interviewNews|slice(1,3) %}

                            <div class="box"><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}" title="">
                                    {% if news.featuredImage %}
                                        <figure><img
                                                    src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_170_110') }}"
                                                    alt="{{ news.title }}"></figure>
                                    {% endif %}
                                    <h6>{{ news.introText|truncateSentence(16) }}</h6>
                                </a></div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

        </div>
        <div class="col-3">
            <div class="mod_samaj">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':2}) }}" title="">समाज</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':2}) }}" class="more">थप समाज</a>
                </div>
                <ul>
                    {% for news in samajNews|slice(0,1) %}
                        <li>
                            <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                   title="{{ news.title }}">{{ news.title }}</a></h5>
                            {% if news.featuredImage %}
                                <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                           title="{{ news.title }}"><img
                                                src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_270_150') }}"
                                                alt="{{ news.title }}" height="150" width="270"> </a></figure>
                            {% endif %}
                        </li>
                    {% endfor %}
                    {% for news in samajNews|slice(1,6) %}
                        <li><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                               title="{{ news.title }}">{{ news.title }}</a></li>
                    {% endfor %}

                </ul>
            </div>
        </div>
        {#ADS START SIDE OF SAMAJ #}
        <div class="col-3">
            <div class="banner smgap">
                <div class="bigyapan">
                    {% set innerTop = getAds('side-samaj-menu',3) %}
                    {% if innerTop|length > 0 %}
                        {% for ad in innerTop %}
                            <figure><a href="{{ ad.adLink }}" title="{{ ad.adTitle }}">
                            {% if ad.file is not null %}
                                <img src="{{ ad.file }}" alt=""></a></figure>
                            {% elseif ad.script is not null %}
                                {{ ad.script|raw }}
                            {% endif %}
                        {% endfor %}

                    {% endif %}
                </div>
            </div>
        </div>
        {#ADS END SIDE OF SAMAJ #}
    </div>
</section>
