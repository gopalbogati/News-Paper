<section>
    <div class="container">
        <div class="col-9">
            <div class="mod_photogallery">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':2}) }}"
                             title="">फोटो ग्यालरी</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':2}) }}" class="more">थप फोटो ग्यालरी</a>
                </div>
                <div class="block">
                    <div class="colLeft">
                        <div id="myCarousel" class="carousel fade" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                {% for key,news in photogalleryNews|slice(0,4) %}
                                    <div class="item {% if key==0 %}active{% endif %}">
                                        {% if news.featuredImage %}
                                            <figure><img
                                                        src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_580_420') }}"
                                                        alt="">
                                            </figure>
                                        {% endif %}
                                        <div class="carousel-caption" data-animation="animated bounceInLeft"><a
                                                    href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                                    title="">{{ news.title }}
                                            </a></div>
                                    </div>
                                {% endfor %}
                            </div>
                            <a class="carousel-control left" href="#myCarousel" data-slide="prev"></a>
                            <a class="carousel-control right" href="#myCarousel" data-slide="next"></a>
                        </div>
                    </div>
                    <div class="colRight">
                        <ul>
                            {% for news in photogalleryNews|slice(4,5) %}
                                <li><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}" title="">
                                        {% if news.featuredImage %}
                                            <figure><img
                                                        src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_270_200') }}"
                                                        alt="">
                                            </figure>
                                        {% endif %}
                                        <h5>{{ news.title }}</h5>
                                    </a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            {% include '@BidheeFrontend/Home/includes/rochak-news.html.twig' %}
        </div>
    </div>
    </div>
</section>
