<section>
    <div class="container">
        <div class="col-9">
            <div class="mod_video">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':17}) }}" title="">भिडियो</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':17}) }}" class="more">थप भिडियो</a>
                </div>
                <div class="block">
                    {% for news in videoNews|slice(0,1) %}
                        <div class="colLeft">
                            <div class="videoWrapper">
                                <iframe width="560" height="315"
                                        src="https://www.youtube.com/embed/{{ news.videoLink }}"
                                        frameborder="0" allowfullscreen></iframe>
                            </div>
                            <h4>{{ news.title }}</h4>
                        </div>
                    {% endfor %}
                    <div class="colRight">
                        <ul>
                            {% for news in videoNews|slice(1,3) %}
                                <li><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                       title="{{ news.title }}">
                                        {% if news.featuredImage %}
                                            <figure><img
                                                        src="http://img.youtube.com/vi/{{ news.videoLink }}/mqdefault.jpg"
                                                        height="180" width="320" alt="{{ news.title }}"></figure>
                                        {% endif %}
                                        <h5>{{ news.title }}</h5>
                                    </a></li>
                            {% endfor %}

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="mod_international">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':19}) }}" title="">प्रवास</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':19}) }}" class="more">थप
                        प्रवास</a>
                </div>
                <ul>
                    {% for news in prawashaNews|slice(0,2) %}
                        <li>
                            <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                   title="{{ news.title }}">{{ news.title }}</a></h5>
                            <div class="tbl">
                                {% if(news.featuredImage) %}
                                    <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                               title="{{ news.title }}"><img
                                                    src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_100_65') }}"
                                                    alt="{{ news.title }}"></a></figure>
                                {% endif %}
                                <div class="intro"><div class="overflow">
                                        {% if news.authorcheck == true %}{% if news.authorName is not null%}<span class="author">{{news.authorName}}{% endif %}{% endif %}</span> {{ news.introText|truncateSentence(11) }}
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
