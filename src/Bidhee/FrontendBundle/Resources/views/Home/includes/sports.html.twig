<section>
    <div class="container">
        <div class="col-8">
            <div class="mod_sports">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':4}) }}" title="">खेलकुद</a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':4}) }}" class="more">थप खेलकुद</a>
                </div>
                <div class="block">
                    {% for news in sportsNews|slice(0,1) %}
                        <div class="colLeft">
                            <h4><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                   title="{{ news.title }}">{{ news.title }}</a></h4>
                            {% if news.featuredImage %}
                                <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}" title=""><img
                                                src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_370_205') }}"
                                                alt="{{ news.title }}" height="205" width="370"></a></figure>
                            {% endif %}
                            <div class="intro">{{ news.introText }}
                            </div>
                        </div>
                    {% endfor %}

                    <div class="colRight">
                        <ul>
                            {% for news in sportsNews|slice(1,3) %}
                                <li>
                                    <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                           title="">{{ news.title }}</a></h5>
                                    <div class="tbl">
                                        {% if news.featuredImage %}
                                            <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                                       title="{{ news.title }}"><img
                                                            src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_100_65') }}"
                                                            alt=""></a></figure>
                                        {% endif %}
                                        <div class="intro"><div class="overflow">
                                                {% if news.authorcheck == true %}{% if news.authorName is not null%}<span class="author">{{news.authorName}}{% endif %}{% endif %}</span> {{ news.introText|truncateSentence(11) }}
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}

                        </ul>
                    </div>
                </div>

                <div class="bigyapan">
                    {% set innerTop = getAds('below-sports-menu',15) %}
                    {% if innerTop|length > 0 %}
                        {% for ad in innerTop %}
                            <figure><a href="{{ ad.adLink }}" title="{{ ad.adTitle }}">
                            {% if ad.file is not null %}
                                <img src="{{ ad.file }}" alt=""/></a>
                                </figure>
                            {% elseif ad.script is not null %}
                                {{ ad.script|raw }}
                            {% endif %}
                        {% endfor %}

                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="mod_desh">
                <div class="heading">
                    <span><a href="{{ url('bidhee_frontend_news_by_category', {'id':14}) }}" title="">प्रदेश
                        </a></span>
                    <a href="{{ url('bidhee_frontend_news_by_category', {'id':14}) }}" class="more">थप प्रदेश
                    </a>
                </div>
                <div class="block">
                    <ul>
                        {% for news in deshNews|slice(0,2) %}
                            <li>
                                <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                       title="{{ news.title }}">{{ news.title }}</a>
                                </h5>
                                <div class="tbl">
                                    {% if(news.featuredImage) %}
                                        <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                                   title="{{ news.title }}"><img
                                                        src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_100_65') }}"
                                                        alt="{{ news.title }}"></a></figure>
                                    {% endif %}
                                    <div class="intro"><div class="overflow">
                                            {% if news.authorcheck == true %}{% if news.authorName is not null%}<span class="author">{{news.authorName}}{% endif %}{% endif %}</span> {{ news.introText|truncateSentence(11) }}
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                        {% for news in deshNews|slice(2,1) %}
                            <li>
                                <h5><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                       title="{{ news.title }}">{{ news.title }}</a></h5>
                                <div class="tbl">
                                    <div class="intro"><div class="overflow">
                                            {% if news.authorcheck == true %}{% if news.authorName is not null%}<span class="author">{{news.authorName}}{% endif %}{% endif %}</span> {{ news.introText|truncateSentence(11) }}
                                        </div>
                                    </div>
                                </div>

                            </li>
                        {% endfor %}
                        {% for news in deshNews|slice(3,2) %}
                            <li><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                   title="{{ news.title }}">{{ news.title }}</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
