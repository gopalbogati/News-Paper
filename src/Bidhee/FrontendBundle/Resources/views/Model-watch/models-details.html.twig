{% extends 'BidheeFrontendBundle::layout.html.twig' %}


{% block ogTags %}
    <meta property="og:image" content="{{ ('/uploads/gallery/' ~ images[0].path) }}"/>
    <meta property="og:title" content="{{ images[0].caption }}"/>
    <meta property="og:type" content="article"/>
    <meta property="og.author" content=""/>

    {#<meta property="og:url" content="{{ path('bidhee_frontend_album',{'id':albums[0].id}) }}"/>#}
    <meta property="og:description" content="{{ images[0].caption }}"/>
{% endblock %}


{% block title %}
    <title>
        Janata Samachar Model Gallery - {{ images[0].album.name }}
    </title>
{% endblock %}

{% block content %}
    <!-- gallery CSS -->
    <link href="{{ asset('bundles/bidheefrontend/gallery-viewer/css/unite-gallery.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/bidheefrontend/gallery-viewer/themes/default/ug-theme-default.css') }}"
          rel="stylesheet">
    <section id="wrapper">
        <div class="container">
            <div class="col-12">
                <!-- Main Content -->
                <article class="full">
                    <div class="models">
                        <div class="title">{{ images[0].album.name }}  </div>
                        <div class="info">
                            <div class="date">{{ images[0].album.createdOn.date|nepaliDate }}</div>
                            <div class="share">
                                <span class='st_facebook_hcount' displayText='Facebook'></span>
                                <span class='st_twitter_hcount' displayText='Tweet'></span>
                            </div>
                        </div>
                        <div class="model-slide">
                        </div>
                        <!-- GALLERY THUMB SECTION
   ================================================== -->
                        <div class="section" style="margin-top:0;">

                            <div id="gallery" style="display:none;">

                                {% for image in images %}
                                    <img alt="Preview Image 1"
                                         src="{{ ('uploads/gallery/' ~ image.path) | imagine_filter('bidhee_thumbnail_379_276') }}"
                                         data-image="{{ ('/uploads/gallery/' ~ image.path) }}"
                                         data-description="{{ image.caption }}">

                                {% endfor %}

                            </div>
                        </div>
                        <br/>
                        <div class="title">अन्य मोडलहरु</div>
                        <div class="listing">
                            {% for album in albums %}
                                <div class="box"><a
                                            href="{{ path('bidhee_frontend_model_gallery_detail', {'id': album.id}) }}"
                                            title="">
                                        <figure><img
                                                    src="{{ ('uploads/gallery/' ~ album.images[0].path ) | imagine_filter('bidhee_thumbnail_270_420') }}"
                                                    height="420" width="270" alt=""></figure>
                                    </a>
                                    <h5>{{ album.name }}</h5>
                                </div>

                            {% endfor %}

                        </div>
                    </div>
                </article>
                <aside></aside>
            </div>
        </div>
    </section>
{% endblock %}


