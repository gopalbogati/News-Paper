    <script type="text/javascript"
            src="{{ asset('bundles/bidheefrontend/gallery-viewer/js/ug-common-libraries.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/bidheefrontend/gallery-viewer/js/ug-functions.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/bidheefrontend/gallery-viewer/js/ug-thumbsgeneral.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/bidheefrontend/gallery-viewer/js/ug-thumbsstrip.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/bidheefrontend/gallery-viewer/js/ug-touchthumbs.js') }}"></script>
    <script type="text/javascript"
