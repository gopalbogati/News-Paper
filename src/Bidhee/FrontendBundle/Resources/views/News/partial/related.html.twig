{% if relatedNews %}

    <div class="mod_related">
        <div class="heading">
            <span><a href="#" title="">सम्बन्धित समाचारहरु</a></span>
        </div>
        <div class="block">
            {% if relatedNews %}
                <div class="box">
                    <figure><a href="{{ path('bidhee_frontend_news', {'id': relatedNews[0].id}) }}"
                               title="{{ path('bidhee_frontend_news', {'id': relatedNews[0].id}) }}"><img
                                    src="{{ relatedNews[0].featuredImage|relative_path| imagine_filter('bidhee_thumbnail_270_160') }}"
                                    height="160"
                                    width="270" alt="{{ relatedNews[0].title }}"></a></figure>
                    <h5><a href="{{ path('bidhee_frontend_news', {'id': relatedNews[0].id}) }}" title="">{{ relatedNews[0].title }}</a></h5>
                    <div class="intro">

                        {{ relatedNews[0].introText|truncate(100) }}

                    </div>
                </div>
                {% if relatedNews|length>1 %}
                    {% for news in relatedNews|slice(1, 3) %}
                        <div class="box">
                            <figure><a href="{{ path('bidhee_frontend_news', {'id': news.id}) }}"
                                       title="{{ news.title }}">
                                    {% if news.featuredImage is not null %}
                                        <img src="{{ news.featuredImage|relative_path| imagine_filter('bidhee_thumbnail_270_160') }}"
                                             height="160"
                                             width="270" alt="{{ news.title }}">
                                    {% endif %}
                                </a></figure>
                            <h5><a href="{{ path('bidhee_frontend_news', {'id': relatedNews[0].id}) }}" title="">{{ news.title }}</a></h5>
                            <div class="intro">

                                {{ news.introText|truncate(150) }}

                            </div>
                        </div>

                    {% endfor %}
                {% endif %}
            {% endif %}


        </div>
    </div>


{% endif %}
