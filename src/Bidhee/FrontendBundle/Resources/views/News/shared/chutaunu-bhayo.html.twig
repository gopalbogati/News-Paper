{% if haveYouMissedNews %}
    <div class="add-news">
        <h2>छुटाउनु भयो कि</h2>
        {% for news in haveYouMissedNews|slice(0,1) %}
            <div class="row">
                <h3><a href="{{ path('bidhee_frontend_news',{'id':news.id}) }}">{{ news.title }}</a></h3>

                <div class="col-sm-6 add-news-img">
                    <img src="{{ news.featuredImage| relative_path | imagine_filter('bidhee_thumbnail_174_109') }}" alt="">
                </div>
                <!--add-news-img-->
                <div class="col-sm-6 add-news-detail">
                    <p>{{ news.introText|truncateSentence(20) }} <br>

                        <a href="{{ path('bidhee_frontend_news',{'id':news.id}) }}">पूरा
                            पढ्नुहोस्</a>
                    </p>
                </div>
                <!--add-news-detail-->
            </div>
        {% endfor %}

        {% for news in haveYouMissedNews|slice(1,3) %}
            <div class="row">
                <h3><a href="{{ path('bidhee_frontend_news',{'id':news.id}) }}">{{ news.title }}</a></h3>

                <!--add-news-img-->
                <div class="col-sm-12 add-news-detail">
                    <p>{{ news.introText|truncateSentence(20) }} <br>

                        <a href="{{ path('bidhee_frontend_news',{'id':news.id}) }}">पूरा
                            पढ्नुहोस्</a>
                    </p>
                </div>
                <!--add-news-detail-->
            </div>
        {% endfor %}
        <!--row-->
    </div>
{% endif %}